<div class="contents row">
	<h1>Hello <%= @current_user.name %>!</h1>
	<br>
    <table id="individual_patient" style="width:100%">
      <tr>
        <th id="individual_patient" ><%= "Email" %></th>
        <td><%= @current_user.email %></td>
      </tr>
      <tr>
        <th id="individual_patient"><%= "DOB" %></th>
        <td><%= @current_user.dob %></td>
      </tr>
      <tr>
        <th id="individual_patient"><%= "MRN" %></th>
        <td><%= @current_user.mrn %></td>        
      </tr>
      <tr>
        <th id="individual_patient"><%= "Authorized Apps" %></th>
        <td>
          <% if @current_user.withings_authorized then %>
            <%= link_to 'Withings', withings_activity_path %><br>
          <% else %>
            None
          <% end %>
        </td>        
      </tr>
    </table>
		<br>
	<%= link_to 'Register your account with mobile apps', authorize_path %> <br>
	<%= link_to 'Edit your profile', edit_patient_registration_path(@current_user)%> <br>
	<%= link_to 'Log out', destroy_patient_session_path, :method => :delete %>

</div>